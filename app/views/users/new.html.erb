<% if flash[:message] %>
<div style="font-size: 16px;"><span><%= flash[:message] %></span></div>
<% end %>
<%= bootstrap_form_for(@user, label_errors: true, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-6") do |f| %>
  <%= f.text_field :phone, label: '手机号' %>
  <%= f.password_field :password, label: '密码' %>
  <%= f.form_group do %>
  <%= f.submit "创建用户", class: "btn btn-success" %>
  <% end %>
<% end %>